{
    "name": "payplug/payplug-woocommerce",
    "description": "",
    "license": "GPL-3.0-or-later",
    "type": "wordpress-plugin",
    "keywords": ["payplug", "woocommerce", "gateway"],
    "authors": [
        {
            "name": "PayPlug",
            "email": "support@payplug.com"
        },
        {
            "name": "Be API",
            "email": "technical@beapi.fr"
        }
    ],
    "config": {
        "platform": {
            "php": "5.6.0"
        },
        "process-timeout": 3600
    },
    "require": {
        "php": ">=5.6.0",
        "composer/installers": "~1.0",
        "payplug/payplug-php": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "lucatume/wp-browser": "dev-php-56-compat",
        "browserstack/browserstack-local": "dev-master",
        "squizlabs/php_codesniffer": "3.*",
        "wp-coding-standards/wpcs": "1.1.0"

    },
    "autoload": {
        "psr-4": {
            "Payplug\\PayplugWoocommerce\\": "src"
        }
    },
    "scripts": {
        "coding-standards": [
            "./vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs/  && ./vendor/bin/phpcs --standard=phpcs.xml.dist ./ -p"
        ],
        "coding-style": [
            "./vendor/bin/phpcbf --standard=phpcs.xml.dist ./ --extensions=php -p"
        ],
        "test-wpunit" : "vendor/bin/codecept run wpunit",
        "test-acceptance" : "vendor/bin/codecept run acceptance --debug --env=local --fail-fast",

        "test-wpunit-all" : "vendor/bin/codecept run wpunit",
        "test-acceptance-all" : "vendor/bin/codecept run acceptance AdminConfiguredCest --no-exit && vendor/bin/codecept run acceptance AdminNotConfiguredCest --no-exit && vendor/bin/codecept run acceptance PaymentCest --no-exit && vendor/bin/codecept run acceptance PaymentLightboxCest --no-exit && vendor/bin/codecept run acceptance PaymentOneClickCest --no-exit && vendor/bin/codecept run acceptance RefundCest --no-exit"
    }
}
